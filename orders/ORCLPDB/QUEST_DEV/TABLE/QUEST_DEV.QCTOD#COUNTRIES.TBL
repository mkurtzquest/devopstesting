DROP TABLE QUEST_DEV.QCTOD#COUNTRIES CASCADE CONSTRAINTS;

CREATE TABLE QUEST_DEV.QCTOD#COUNTRIES
(
  COUNTRY_ID    CHAR(2 BYTE) CONSTRAINT QCTOD#COUNTRY_ID_NN NOT NULL,
  COUNTRY_NAME  VARCHAR2(40 BYTE),
  REGION_ID     NUMBER
)
TABLESPACE TOOLS
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
MONITORING;


CREATE UNIQUE INDEX QUEST_DEV.QCTOD#COUNTRY_C_ID_PK ON QUEST_DEV.QCTOD#COUNTRIES
(COUNTRY_ID)
LOGGING
TABLESPACE TOOLS
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           );

ALTER TABLE QUEST_DEV.QCTOD#COUNTRIES ADD (
  CONSTRAINT QCTOD#COUNTRY_C_ID_PK
  PRIMARY KEY
  (COUNTRY_ID)
  USING INDEX QUEST_DEV.QCTOD#COUNTRY_C_ID_PK
  ENABLE VALIDATE);

